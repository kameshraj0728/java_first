public class ThrowThrowsExample {

    // Method using throw keyword
    public static void validateAge(int age) {
        if (age < 18) {
            throw new IllegalArgumentException("Invalid age. Age must be 18 or above.");
        } else {
            System.out.println("Valid age: " + age);
        }
    }

    // Method using throws keyword
    public static void divideNumbers(int num1, int num2) throws ArithmeticException {
        if (num2 == 0) {
            throw new ArithmeticException("Cannot divide by zero.");
        } else {
            int result = num1 / num2;
            System.out.println("Result of division: " + result);
        }
    }

    public static void main(String[] args) {
        // Example of throw keyword
        try {
            validateAge(15);
        } catch (IllegalArgumentException e) {
            System.out.println("Exception caught: " + e.getMessage());
        }

        // Example of throws keyword
        try {
            divideNumbers(10, 0);
        } catch (ArithmeticException e) {
            System.out.println("Exception caught: " + e.getMessage());
        }
    }
}
